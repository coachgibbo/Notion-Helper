<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <RelativeLayout
        android:layout_width="280dp"
        android:layout_height="70dp"
        android:background="#333333"
        android:gravity="center_vertical">

        <Button
            android:id="@+id/adddailytask_widget_button"
            android:layout_width="70dp"
            android:layout_height="64dp"
            android:layout_marginStart="5dp"
            android:backgroundTint="#333333"
            android:text="Add Task"
            android:textColor="@color/white"
            android:textSize="13sp">

        </Button>

        <LinearLayout
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/adddailytask_widget_button"
            android:background="@color/white" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/adddailytask_widget_button">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="4dp"
                android:text="Next Task:"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="@color/white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="30dp"
                android:layout_toLeftOf="@id/adddailytask_widget_completebutton"
                android:text="Task name goes here"
                android:textColor="@color/white" />

            <ImageButton
                android:id="@+id/adddailytask_widget_refreshbutton"
                android:src="@drawable/refreshicon"
                android:layout_width="30dp"
                android:layout_height="32dp"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="5dp"
                android:background="#333333"
                android:scaleType="fitCenter"
                android:padding="6dp"
                android:elevation="5dp" />

            <ImageButton
                android:id="@+id/adddailytask_widget_openbutton"
                android:src="@drawable/openicon"
                android:layout_width="30dp"
                android:layout_height="32dp"
                android:layout_toStartOf="@id/adddailytask_widget_refreshbutton"
                android:layout_marginEnd="5dp"
                android:background="#333333"
                android:scaleType="fitCenter"
                android:padding="5dp"
                android:elevation="5dp" />

            <ImageButton
                android:id="@+id/adddailytask_widget_completebutton"
                android:src="@drawable/completeicon"
                android:layout_width="65dp"
                android:layout_height="32dp"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="35dp"
                android:layout_marginEnd="5dp"
                android:background="@color/green"
                android:scaleType="fitCenter"
                android:elevation="5dp" />

        </RelativeLayout>

    </RelativeLayout>

</LinearLayout>